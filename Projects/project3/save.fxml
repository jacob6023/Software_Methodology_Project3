<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project3.ClinicManagerController">
    <top>
        <HBox spacing="10" padding="10">
            <TextField fx:id="searchField" promptText="Search for appointments..."/>
            <Button text="Search" onAction="#handleSearch"/>
        </HBox>
    </top>
    <center>
        <ListView fx:id="appointmentListView" prefWidth="600" prefHeight="400"/>
    </center>
    <bottom>
        <VBox spacing="10" padding="10">
            <HBox spacing="10">
                <Button text="Schedule" fx:id="scheduleButton" onAction="#handleScheduleButtonAction"/>
                <Button text="Cancel" fx:id="cancelButton" onAction="#handleCancelButtonAction"/>
                <Button text="Reschedule" fx:id="rescheduleButton" onAction="#handleRescheduleButtonAction"/>
                <Button text="Clear" fx:id="clearButton" onAction="#handleClearButtonAction"/>
                <Button text="Load Provider" fx:id="loadProviderButton" onAction="#handleLoadProviderButtonAction"/>
            </HBox>
            <HBox spacing="10">
                <DatePicker fx:id="appointmentDatePicker" promptText="Select Appointment Date"/>
                <TextField fx:id="firstNameField" promptText="First Name"/>
                <TextField fx:id="lastNameField" promptText="Last Name"/>
                <DatePicker fx:id="dobDatePicker" promptText="Date of Birth"/>
            </HBox>
            <HBox spacing="10">
                <RadioButton fx:id="officeVisitRadioButton" text="Office Visit"/>
                <RadioButton fx:id="imagingServiceRadioButton" text="Imaging Service"/>
            </HBox>
            <HBox spacing="10">
                <ComboBox fx:id="timeSlotComboBox" promptText="Select Time Slot"/>
                <ComboBox fx:id="providerComboBox" promptText="Select Provider"/>
                <ComboBox fx:id="imagingServiceComboBox" promptText="Select Imaging Service"/>
                <ComboBox fx:id="npiComboBox" promptText="Select NPI"/>
                <TextField fx:id="nipField" promptText="Enter NPI"/>
            </HBox>
            <HBox spacing="10">
                <Button text="Print By Appointment" fx:id="printByAppointmentButton" onAction="#printByAppointment"/>
                <Button text="Print By Patient" fx:id="printByPatientButton" onAction="#printByPatient"/>
                <Button text="Print By Location" fx:id="printByLocationButton" onAction="#printByLocation"/>
            </HBox>
            <HBox spacing="10">
                <Button text="Print Office Appointments" fx:id="printOfficeAppointmentsButton" onAction="#printOfficeAppointments"/>
                <Button text="Print Imaging Appointments" fx:id="printImagingAppointmentsButton" onAction="#printImagingAppointments"/>
                <Button text="Print Expected Credit" fx:id="printExpectedCreditButton" onAction="#printExpectedCredit"/>
            </HBox>
            <HBox spacing="10">
                <Button text="Print Billing Statement" fx:id="printBillingStatementButton" onAction="#printBillingStatement"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>

